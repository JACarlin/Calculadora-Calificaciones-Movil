<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMPW_411_3P_Ex.MVVM.Views.Inicio"
             Title="Inicio">
    <Grid
        RowDefinitions=".9*,.2*">
        <Grid.Background>
            <LinearGradientBrush
                EndPoint="0,1" >
                <GradientStop Offset="0.0" Color="DarkRed"></GradientStop>
                <GradientStop Offset="1" Color="DarkBlue"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <VerticalStackLayout HorizontalOptions="Center" Grid.Row="0">
            <Label Text="Bienvenido"
                   FontSize="40"
                   FontAttributes="Bold"
                   Margin="40"
                   FontFamily="regular"
                   />
            <Frame HeightRequest="250">
                <Image Source="image_large.jpg" HorizontalOptions="Center" MaximumHeightRequest="300" />
            </Frame>

        </VerticalStackLayout>

        <Label Grid.Row="1" Text="Universidad La Salle Bajio" HorizontalOptions="Center" FontFamily="regular"/>
        
    </Grid>
</ContentPage>